<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OnDemandModule" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@color/white</item>
    </style>
    

    <style name="Theme.OnDemandModule.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="custom" parent="Theme.OnDemandModule.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="RoundedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="rippleColor">@color/colorPrimaryVariant</item>
        <item name="shapeAppearance">@style/CustomShapeAppearance</item>

    </style>

    <style name="CustomShapeAppearance">
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
    </style>

    <style name="SplashButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="backgroundTint">@color/white</item>
        <item name="rippleColor">#CACCCF</item>
        <item name="shapeAppearance">@style/SplashButtonShapeAppearance</item>

    </style>

    <style name="SplashButtonShapeAppearance">
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

</resources>